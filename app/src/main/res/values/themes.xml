<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DgCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textInputLabel" parent="Theme.MaterialComponents">
        <item name="boxBackgroundColor">@color/light_black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="boxStrokeColor">@color/light_black</item>
        <item name="android:fontFamily">@font/b_yekan</item>
    </style>

    <style name="textInputStyle" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/b_yekan</item>

    </style>

    <style name="resultTextStyle" parent="Theme.MaterialComponents">
        <item name="android:background"></item>
        <item name="android:textColor"></item>
    </style>

    <style name="actionbarStyle" parent="Theme.MaterialComponents">
        <item name="android:background">@drawable/custom_action_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/b_yekan</item>
    </style>

    <style name="calculateButtonStyle" parent="Theme.MaterialComponents">
        <item name="lb_btnColor">@color/dg_red_color</item>
        <item name="lb_textColor">@color/white</item>
        <item name="lb_cornerRadius">8dp</item>
    </style>

    <style name="Theme.DgCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DgCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DgCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>